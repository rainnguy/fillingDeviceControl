<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" 
    "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.banxian.mapper.SysUserMapper">
	<!--mybatis ehcache缓存配置 -->
	<!-- 以下两个<cache>标签二选一,第一个可以输出日志,第二个不输出日志 <cache type="org.mybatis.caches.ehcache.LoggingEhcache" 
		/> -->
	<!-- <cache type="org.mybatis.caches.ehcache.EhcacheCache"/> -->
	<!-- 以下与实体类的中字段一致 -->
	
	<sql id="selectId">
		id,
		userName,
		accName,
		(select roleName from sys_role
		where sys_role.id
		= sys_user.roleId) roleName,
		userPass,
		description,                                  
		locked,
		credentialsSalt,
		updateTime
	</sql>

	<select id="findUserPage" resultType="com.banxian.entity.UserFormBean">
		select
		<include refid="selectId" />
		from sys_user
		where 1 = 1
		<if test="accName != null and accName != ''">
		and accName like '%${accName}%'
		</if>
	</select>
	
</mapper>